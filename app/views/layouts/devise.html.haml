!!!
%html
  %head
    %title WineCrush
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
  %nav.navbar.navbar-static
    .container
      %a.navbar-toggle{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.glyphicon.glyphicon-chevron-down
      .nav-collapse.collase
        %ul.nav.navbar-nav
          %li
            %a{:href => "#"} Home
          %li
            %a{:href => "/#about"} About
          %li
            %a{:href => "/#restaurants"} Restaurants
        %ul.nav.navbar-right.navbar-nav
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              %i.glyphicon.glyphicon-search
            %ul.dropdown-menu{:style => "padding:12px;"}
              %form.form-inline
                %button.btn.btn-default.pull-right{:type => "submit"}
                  %i.glyphicon.glyphicon-search
                %input.form-control.pull-left{:placeholder => "Search", :type => "text"}
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              %i.glyphicon.glyphicon-user
              %i.glyphicon.glyphicon-chevron-down
            %ul.dropdown-menu
              %li
                =user_login_links
              %li
                %a{:href => "#"} Profile
              %li.divider
              %li
                %a{:href => "#"} About
  = yield