= form_for @menu do |f|
  = f.text_field :name, class: 'form-control focusedInput', placeholder: "Add wine list name here..."
  %br
  = f.text_area :description, class: 'form-control focusedInput', placeholder: 'Add menu description here...', rows: '10'
  %br
  =f.submit "Add Menu", class: 'btn btn-success'
